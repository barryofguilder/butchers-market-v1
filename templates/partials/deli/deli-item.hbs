<div class="col-xs-6 col-sm-4 col-md-2">
  <div class="product-item deli-item">
    <div class="deli-image-container">
      <img src="{{assets}}/{{image}}" class="img-responsive img-rounded">
      {{#if description}}
        <a href="#" class="item-info-btn deli-item-btn" data-item-description="{{description}}">
          <span class="glyphicon glyphicon-zoom-in"></span>
          More Info
        </a>
      {{/if}}
    </div>
    <span class="product-item-title deli-item-title">{{title}}</span>
  </div>
</div>
